<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaPLay.MenuOption"
             Title="MenuOption">
    <VerticalStackLayout Padding="15" Spacing="15">
        <Label 
            Text="Change color button"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Button Text="Red"
                BackgroundColor="Red"
                TextColor="White"
                Clicked="SetRedButtonClicked"/>

        <Button Text="Green"
         BackgroundColor="Green"
         TextColor="White"
         Clicked="SetGreenButtonClicked"/>


        <Button Text="Blue"
         BackgroundColor="Blue"
         TextColor="White"
         Clicked="SetBlueButtonClicked"/>

        <Button Text="Return to menu"
                FontSize="15"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Margin="0,0,0,20"
                Clicked="OnBackButtonClicked"/>


    </VerticalStackLayout>
</ContentPage>